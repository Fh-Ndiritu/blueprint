<% content_for :title, "New message for `#{@group.title}`" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl mb-8">New message for `<%= @group.title %>`</h1>

  <div class="my-6">
    <%= render "form", message: @message, group: @group, parent: @parent %>
  </div>

  <%= link_to "Back to messages", group_messages_path(@group), class: "btn primary-btn" %>
</div>
