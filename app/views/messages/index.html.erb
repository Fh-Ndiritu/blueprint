<% content_for :title, "Messages" %>

<div class="w-full container">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Messages</h1>
    <%= link_to "New message", new_group_message_path(@group), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="messages" class="min-w-full space-y-5  my-9">
    <% if @messages.any? %>
      <%= render @messages %>
    <% else %>
      <p class="text-center my-10">No messages found.</p>
    <% end %>
  </div>
</div>
