<% content_for :title, "Messages for" %>
<div class="w-full container">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Messages for `<%= @group.title %></h1>
    <%= link_to "New message", new_group_message_path(@group), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <!--# use frames to decompose the page to enable caching, and deliver the via frames-->
  <%= turbo_frame_tag "messages", class: "min-w-full space-y-5 my-9" do %>
    <% if @messages.any? %>
      <%= render @messages %>
    <% else %>
      <p class="text-center my-10">No messages found.</p>
    <% end %>
  <% end %>
</div>
