<div id="<%= dom_id group %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Logo:</strong>
    <%= link_to group.logo.filename, group.logo, class: "text-gray-700 underline hover:no-underline" if group.logo.attached? %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= group.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= group.description %>
  </div>
</div>
