<div class="flex flex-row bg-gray-100 h-screen w-screen px-2 overflow-hidden" data-controller="dashboard">
  <div class="w-3/12 h-full bg-neutral-200 pl-2 overflow-y-hidden">
    <!--Sidebar left groups begin-->
    <%= render 'sidebar_left' %>
    <!--Sidebar left group ends-->
  </div>
  <div class="flex flex-col relative w-9/12 w-full h-screen bg-white">
    <!--Main content right-->
    <!--    # Here, we shall decompose our page into turbo frame components
    This will allow faster loading with parallel requests
    Also importantly, we shall defer loading of messages which can be a big speed blocker in practice-->
    <!--This has no right being a turbo frame-->
    <%= turbo_frame_tag "current_group" do %>
      <% if @current_group.present? %>
        <!--Group title -->
        <%= turbo_frame_tag 'group_title' do %>
          <%= render partial: 'groups/group', object: @current_group %>
        <% end %>
        <!--Group title-->
        <div id="messages" class="w-full bg-white px-5 py-6 relat   ive h-[80vh] overflow-x-hidden overflow-y-auto">
          <%= turbo_frame_tag "group_messages" do %>
            <% if @current_group&.messages&.any? %>
              <%= render @current_group.messages %>
            <% else %>
              <p class="text-center ">No messages found.</p>
            <% end %>
          <% end %>
        </div>
        <div class="absolute bottom-0 left-0 w-full">
          <%= turbo_frame_tag "new_message" do %>
            <%= render "messages/form", message: @current_group.messages.new, group: @current_group %>
          <% end %>
        </div>
      <% end %>
    <% end %>
    <!--Main content right-->
  </div>
</div>
